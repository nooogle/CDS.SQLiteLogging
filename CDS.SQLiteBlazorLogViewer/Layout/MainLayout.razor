@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(() => _drawerOpen = !_drawerOpen)" />
        <MudText Typo="Typo.h5" Class="ml-3">SQLite Log Viewer</MudText>
        <MudSpacer />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="1">
        <MudNavMenu>
            <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <MudNavLink Href="logviewer" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Log Viewer</MudNavLink>
            <MudNavLink Href="counter" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Add">Counter</MudNavLink>
            <MudNavLink Href="fetchdata" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dataset">Fetch Data</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent Class="pt-16 px-4">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
}
